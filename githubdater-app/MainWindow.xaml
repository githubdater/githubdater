<Window x:Class="GitHubdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHubdater"
        mc:Ignorable="d"
        Title="GitHubdater" Height="109.2" Width="385" ResizeMode="NoResize" Icon="logo-32.png" ContentRendered="Window_ContentRendered">
    <Grid Margin="0,0,3,-0.4">
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="5" Margin="10,36,-3,0" VerticalAlignment="Top" Width="355" BorderThickness="0" />
        <Label x:Name="lblTitle" Content="Preparing..." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.694,-0.25" Padding="0,5,5,5"/>
        <Label x:Name="lblStep" Content="Preparing..." HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.694,-0.25" Padding="0,5,5,5" Opacity="0.8"/>
        <Label x:Name="lblPercentage" Content="0%" HorizontalAlignment="Right" Margin="0,10,0.4,0" VerticalAlignment="Top" RenderTransformOrigin="-0.694,-0.25" Padding="0,5,5,5"/>
    </Grid>
</Window>
